{
  "$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "parameters": {
    "adminUsername": {
      "type": "string",
      "metadata": {
        "description": "The name of the administrator account to create"
      }
    },
    "adminPassword": {
      "type": "securestring",
      "metadata": {
        "description": "The password for the Administrator account"
      }
    },
    "domainName": {
      "type": "string",
      "metadata": {
        "description": "The FQDN of the Active Directory Domain to be created"
      }
    },
    "_artifactsLocation": {
      "type": "string",
      "metadata": {
        "description": "The base URI where artifacts required by this template are located. When the template is deployed using the accompanying scripts, a private location in the subscription will be used and this value will be automatically generated."
      },
      "defaultValue": "https://raw.githubusercontent.com/pmysore1/azure-devops-server/master/"
    },
    "_artifactsLocationSasToken": {
      "type": "securestring",
      "metadata": {
        "description": "The sasToken required to access _artifactsLocation.  When the template is deployed using the accompanying scripts, a sasToken will be automatically generated."
      },
      "defaultValue": ""
    },
    "location": {
      "type": "string",
      "defaultValue": "[resourceGroup().location]",
      "metadata": {
        "description": "Location for all resources."
      }
    },
    "managementVnetName": {
      "type": "string",
      "metadata": {
        "description": "The size of the VMs to create"
      },
      "defaultValue": "COLABUSV1-PRD-MGMT-VNET01"
      },
    "managementResourceGroupName": {
        "type": "string",
        "metadata": {
          "description": "The size of the VMs to create"
        }
      },
    "tags": {
        "type": "object"
     },
    "appName": {
      "type": "string"
     },
    "appSubnetName": {
      "type": "string"
     },
    "appSubnetCIDR": {
      "type": "string"
     },
    "devOpsVnetCIDR": {
      "type": "string"
     },
     "devOpsVnetName": {
      "type": "string"
     },
     "tfsVMName": {
      "type": "string"
     },
     "vmSize": {
      "type": "string",
      "metadata": {
        "description": "The size of the VMs to create"
      },
      "defaultValue": "Standard_D4_v3"
     },
     "devOpsSearchVMName": {
      "type": "string"
     },
     "devOpsSearchVMSize": {
      "type": "string",
      "metadata": {
        "description": "The size of the VMs to create"
      },
      "defaultValue": "Standard_D4_v3"
     },
     "dnsServers": {
      "type": "array"
     },
     "workspaces_log_analytics_name": {
      "type": "string"
     },
     "imageSKU": {
      "type": "string"
     },
     "sqlserverName": {
      "type": "string"
     },
     "sqlAdministratorLogin": {
      "type": "string"
     },
     "sqlAdministratorLoginPassword": {
      "type": "string"
     },
     "sqlDBName1": {
      "type": "string"
     },
    "sqlDBName2": {
      "type": "string"
    },
    "sqlTier": {
      "type": "string"
    },
    "sqlFamily": {
      "type": "string"
    },
    "sqlSize": {
      "type": "string"
    },
    "logAnalyticsWorkspaceName": {
      "type": "string"
    },
    "external_ips": {
      "type": "string"
    }
  },
  "variables": {
    "loadBalancerName": "[concat(parameters('appName'),'-lb')]",
    "subnetName": "[parameters('appSubnetName')]",
    "loadBalancerBackendName": "[concat(parameters('appName'),'-lb-backend')]",
    "availabilitySetName": "[concat(parameters('appName'),'-availset')]",
    "nestedTemplates": {
      "networkTemplate": "[uri(parameters('_artifactsLocation'), concat('nestedtemplates/virtualNetwork.json', parameters('_artifactsLocationSasToken')))]",
      "domainControllerTemplate": "[uri(parameters('_artifactsLocation'), concat('nestedtemplates/domainController.json', parameters('_artifactsLocationSasToken')))]",
      "sqlServerTemplate": "[uri(parameters('_artifactsLocation'), concat('nestedtemplates/sqlServerManaged.json', parameters('_artifactsLocationSasToken')))]",
      "tfsServerTemplate": "[uri(parameters('_artifactsLocation'), concat('nestedtemplates/tfs.json', parameters('_artifactsLocationSasToken')))]"
    },
    "nsgName": "[concat(parameters('appName'),'-','nsg')]",
    "nsgTemplateUri": "https://raw.githubusercontent.com/pmysore1/create-ha-ad/master/nestedtemplates/nsg/nsg.json"
  },
  "resources": [
    {
      "name": "Network",
      "type": "Microsoft.Resources/deployments",
      "apiVersion": "2017-08-01",
      "comments": "This creates the public IP address, virtual network and load balancer",
      "properties": {
        "mode": "Incremental",
        "templateLink": {
          "uri": "[variables('nestedTemplates').networkTemplate]",
          "contentVersion": "1.0.0.0"
        },
        "parameters": {
          "devOpsVnetName": {
            "value": "[parameters('devOpsVnetName')]"
          },
          "managementVnetName": {
            "value": "[parameters('managementVnetName')]"
          },
          "managementResourceGroupName": {
            "value": "[parameters('managementResourceGroupName')]"
          },
          "devOpsVnetCIDR": {
            "value": "[parameters('devOpsVnetCIDR')]"
          },
          "loadBalancerName": {
            "value": "[variables('loadBalancerName')]"
          },
          "subnetName": {
            "value": "[variables('subnetName')]"
          },
          "subnetCIDR": {
            "value": "[parameters('appSubnetCIDR')]"
          },
          "loadBalancerBackendName": {
            "value": "[variables('loadBalancerBackendName')]"
          },
          "availabilitySetName": {
            "value": "[variables('availabilitySetName')]"
          },
          "dnsServers": {
            "value": "[parameters('dnsServers')]"
          }
        }
      }
    },
    {
      "name": "DevOpsServer",
      "type": "Microsoft.Resources/deployments",
      "apiVersion": "2017-08-01",
      "comments": "This creates the DevOps VM",
      "dependsOn": [
        "[concat('Microsoft.Resources/deployments/',variables('nsgName'),'-resource')]"
       ],
      "properties": {
        "mode": "Incremental",
        "templateLink": {
          "uri": "[variables('nestedTemplates').tfsServerTemplate]",
          "contentVersion": "1.0.0.0"
        },
        "parameters": { 
          "virtualNetworkName": {
            "value": "[parameters('devOpsVnetName')]"
          },
          "vmName": {
            "value": "[parameters('tfsVMName')]"
          },
          "vmSize": {
            "value": "[parameters('vmSize')]"
          },
          "adminUsername": {
            "value": "[parameters('adminUsername')]"
          },
          "adminPassword": {
            "value": "[parameters('adminPassword')]"
          },
          "domainName": {
            "value": "[parameters('domainName')]"
          },
          "existingVnetName": {
            "value": "[parameters('devOpsVnetName')]"
          },
          "existingSubnetName": {
            "value": "[variables('subnetName')]"
          },
          "availabilitySetName": {
            "value": "[variables('availabilitySetName')]"
          },
          "loadBalancerName": {
            "value": "[variables('loadBalancerName')]"
          },
          "loadBalancerBackendName": {
            "value": "[variables('loadBalancerBackendName')]"
          },
          "existingSqlInstance": {
            "value": "[concat('tfsSQL', '.', parameters('domainName'))]"
          },
          "_artifactsLocation": {
            "value": "[parameters('_artifactsLocation')]"
          },
          "_artifactsLocationSasToken": {
            "value": "[parameters('_artifactsLocationSasToken')]"
          },
          "managementResourceGroupName": {
            "value": "[parameters('managementResourceGroupName')]"
          },
          "logAnalyticsWorkspaceName": {
            "value": "[parameters('logAnalyticsWorkspaceName')]"
          },
          "nsgName": {
            "value": "[variables('nsgName')]"
          }
        }
      }
    },
    {
      "name": "DevOps-Search-App",
      "type": "Microsoft.Resources/deployments",
      "apiVersion": "2017-08-01",
      "comments": "This creates the DevOps search VM",
      "dependsOn": [
        "[concat('Microsoft.Resources/deployments/',variables('nsgName'),'-resource')]"
       ],
      "properties": {
        "mode": "Incremental",
        "templateLink": {
          "uri": "[variables('nestedTemplates').tfsServerTemplate]",
          "contentVersion": "1.0.0.0"
        },
        "parameters": { 
          "virtualNetworkName": {
            "value": "[parameters('devOpsVnetName')]"
          },
          "vmName": {
            "value": "[parameters('devOpsSearchVMName')]"
          },
          "vmSize": {
            "value": "[parameters('devOpsSearchVMSize')]"
          },
          "adminUsername": {
            "value": "[parameters('adminUsername')]"
          },
          "adminPassword": {
            "value": "[parameters('adminPassword')]"
          },
          "domainName": {
            "value": "[parameters('domainName')]"
          },
          "existingVnetName": {
            "value": "[parameters('devOpsVnetName')]"
          },
          "existingSubnetName": {
            "value": "[variables('subnetName')]"
          },
          "availabilitySetName": {
            "value": "devops-search-availset"
          },
          "loadBalancerName": {
            "value": "DEVOPS-SEARCH-APP-LB"
          },
          "loadBalancerBackendName": {
            "value": "DEVOPS-SEARCH-APP-LB-backend"
          },
          "existingSqlInstance": {
            "value": "[concat('tfsSQL', '.', parameters('domainName'))]"
          },
          "_artifactsLocation": {
            "value": "[parameters('_artifactsLocation')]"
          },
          "_artifactsLocationSasToken": {
            "value": "[parameters('_artifactsLocationSasToken')]"
          },
          "managementResourceGroupName": {
            "value": "[parameters('managementResourceGroupName')]"
          },
          "logAnalyticsWorkspaceName": {
            "value": "[parameters('logAnalyticsWorkspaceName')]"
          },
          "nsgName": {
            "value": "[variables('nsgName')]"
          }
        }
      }
    },
    {
      "apiVersion": "2017-05-10",
      "name": "[concat(variables('nsgName'),'-resource')]",
      "type": "Microsoft.Resources/deployments",
      "properties": {
        "mode": "Incremental",
        "templateLink": {
          "uri": "[variables('nsgTemplateUri')]"
        },
        "parameters": {
          "nsg_name": {
            "value": "[variables('nsgName')]"
          },
          "location": {
            "value": "[parameters('location')]"
          },
          "tags": {
            "value": "[parameters('tags')]"
          },
          "external_ips": {
              "value": "[parameters('external_ips')]"
          }
        }
      }
    }
  ]
}
